<div class="col-md-6 col-xl-3 mb-4">
    <div class="card shadow border-left-{{color}} py-2">
        <div class="card-body">
            <div class="row align-items-center no-gutters">
                <div class="col mr-2">
                    <div class="text-uppercase text-{{color}} font-weight-bold text-xs mb-1"><span>{{title}}</span></div>
                    <div class="text-light font-weight-bold h5 mb-0"><span>{{value}}</span></div>
                </div>
                <div class="col-auto"><i class="{{icon}} fa-2x text-gray-300" {{#if style}}style="{{style}}"{{/if}}></i></div>
            </div>
        </div>
    </div>
</div>

