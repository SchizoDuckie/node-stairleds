<h3 class="mb-4"><i class="fas fa-wifi" style="transform: rotateZ(90deg);"></i>&nbsp;Sensor Settings</h3>

<!-- Discovered Devices Section -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Discovered Sensor Devices</h6>
    </div>
    <div class="card-body">
        <ul id="sensorDevicesList">
            {{#each discoveredDevices}}
            <li>
                {{this.name}} ({{this.address}}:{{this.port}})
                <span class="badge bg-{{#if this.connected}}success{{else}}danger{{/if}}">
                    {{#if this.connected}}Connected{{else}}Disconnected{{/if}}
                </span>
            </li>
            {{else}}
            <li>No devices discovered.</li>
            {{/each}}
        </ul>
    </div>
</div>

<!-- Configuration Cards -->
<div id="sensorConfigurations" class="row">
    {{#each sensors}}
        {{> sensor-config-card effects=../effects}} 
    {{/each}}
</div>

<script id="sensor-config-card" type="text/x-handlebars-template">
{{{includeRaw 'sensor-config-card'}}}
</script>

<script>
    window.sensors = {{{ json sensors }}};
    window.effects = {{{ json effects }}};
</script>

<script src="/js/SensorManager.js"></script>
<script src="/js/SensorConfigCard.js"></script>
