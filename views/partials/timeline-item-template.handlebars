<div class="timeline-bar list-group-item draggable" data-json="{{json .}}" data-index="{{@index}}">
    <div class="row align-items-center">
        <div class="col-1 text-muted">
            <i class="fas fa-grip-vertical handle"></i>
        </div>
        <div class="col-2">
            <span class="badge bg-primary timeline-type">{{type}}</span>
        </div>
        <div class="col-3">
            <i class="fas fa-clock me-2"></i>
            <span class="timeline-start">{{at}}ms</span>
        </div>
        <div class="col-3">
            <i class="fas fa-hourglass-half me-2"></i>
            <span class="timeline-duration">{{options.duration}}ms</span>
        </div>
        <div class="col-3 text-end">
            <button type="button" class="btn btn-sm btn-outline-secondary play-item">
                <i class="fas fa-play"></i>
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary edit-item">
                <i class="fas fa-edit"></i>
            </button>
            <button type="button" class="btn btn-sm btn-outline-secondary delete-item">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>

</div> 